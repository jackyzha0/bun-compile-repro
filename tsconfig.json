{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/node_modules", "**/.*/", "dist"]
}
